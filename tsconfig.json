{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES5",
        "lib": [
            "ESNext",
        ],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "baseUrl": "src",
        "paths": {
            // TsconfigPathsPlugin usage here
        }
    },
    "include": [
        "src",
        "global.d.ts",
        "webpack.config.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}